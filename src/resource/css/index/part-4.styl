.v-4-box
	position absolute
	width calc(50% - 70px)
	top 50%
	left 0
	padding-right 70px
	transform translateY(-50%)
	color #666
	text-align right
	h3
		position relative
		font-size 5.6rem
		font-weight normal
		line-height 50px
		text-transform Uppercase
		margin 0 0 30px 0
		right -4px
		padding-top 160px
	h4
		font-size 3.8rem
		font-weight normal
		line-height 50px
		color #2660ad
		margin 0 0 150px 0
	p
		font-size 2.6rem
		line-height 26px
		margin 0 30px 65px 0
		position relative
		&:after
			content ''
			position absolute
			display block
			width 6px
			height 6px
			background-color #2660ad
			border-radius 50%
			top 12px
			right -30px
	a
		display inline-block
		font-size 2.2rem
		line-height 40px
		width 160px
		height 40px
		border 1px solid #666
		color #666
		text-decoration none
		text-align center
		box-sizing border-box
		margin-top 35px
		margin-right 70px
		&:hover
			color #2660ad
			border 1px solid #2660ad
