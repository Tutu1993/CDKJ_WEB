.v-bg-2
	color #333
	h3
		font-size 5rem
		font-weight normal
		line-height 50px
		margin 0 0 60px 0
		padding-top 40px
	h4
		font-size 4rem
		font-weight normal
		line-height 40px
		color #2660ad
		margin 0 0 120px 0
	span
		display block
		font-size 2rem
		font-weight normal
		line-height 20px
		margin 170px 0 0
.v-2-box
	height 245px
	width 980px
	text-align justify
	&:after
		content ""
		display inline-block
		width 100%
		font-size 0
		line-height 0
	h5
		position absolute
		bottom 15px
		width 100%
		font-size 2rem
		font-weight normal
		line-height 26px
		margin 0
		text-align center
		transition .3s
	p
		display block
		position absolute
		bottom 15px
		left 0
		width 155px
		font-size 1.4rem
		line-height 18px
		margin 0
		padding 0 25px
		text-indent 28px
		color rgba(255, 255, 255, 0)
		overflow hidden
.v-2-list
	display inline-block
	position relative
	width 205px
	height 245px
	overflow hidden
	&:before
		content ''
		position absolute
		top 20px
		left 20px
		width 164px
		height 164px
		border-radius 50%
		box-sizing border-box
		border 6px solid #2660ad
		transition border .2s .1s
	&:after
		content ''
		position absolute
		font-size 0
		top 0
		left 0
		width 205px
		height 0
		background #2660ad
		border-radius 5px
		z-index -1
		transition height .3s
	.iconfont
		color #2660ad
		position absolute
		top 44%
		left 50%
		transform translate(-50%, -50%)
		font-size 8.2rem
		transition top .3s
.v-2-list:hover
	&:before
		border 3px solid #2660ad
	&:after
		height 245px
	.iconfont
		color #fff
		top 27%
	h5
		bottom 100px
		font-size 1.6rem
		line-height 20px
		color #fff
	p
		color rgba(255, 255, 255, .8)
		transition color .3s .2s
.icon-yingxiaoguanli
	&:before
		position relative
		top -4px
