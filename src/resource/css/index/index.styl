.swiper-container
	width 100%
	height 100%
.swiper-slide
	text-align center
	font-size 18px
	background #fff
	transform-style preserve-3d
	position relative
.verticalcenter
	position absolute
	top 50%
	left 50%
	transform translate(-50%, -50%)
.swiper-container-h .h-bg-1
	background url('../../imgs/index/h-bg-1.jpg') center center no-repeat
	background-size cover
.swiper-container-h .h-bg-2
	background url('../../imgs/index/h-bg-2.jpg') center center no-repeat
	background-size cover
.swiper-button-prev, .swiper-button-next
	width 17px
	height 28px
	background-size 17px 28px
.swiper-container-h	.swiper-button-prev
	left 5.5%
	background-image url('../../imgs/index/left-arrow.png')
.swiper-container-h	.swiper-button-next
	background-image url('../../imgs/index/right-arrow.png')
	right 5.5%
.swiper-container-v .v-bg-2
	background url('../../imgs/index/v-bg-2.jpg') center center no-repeat
	background-size cover
.swiper-container-v .v-bg-3
	background url('../../imgs/index/v-bg-3.jpg') center center no-repeat
	background-size cover
.swiper-container-v .v-bg-5
	background url('../../imgs/index/v-bg-5.jpg') center center no-repeat
	background-size cover
